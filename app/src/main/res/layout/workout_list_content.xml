<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="workout"
            type="com.lambdasoup.quickfit.WorkoutItem" />
        <variable
            name="handler"
            type="com.lambdasoup.quickfit.WorkoutItemRecyclerViewAdapter.EventHandler"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/activity_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            app:selection="@{workout.activityTypeIndex}"
            app:onItemSelectedListener="@{handler.activityTypeSpinnerItemSelected}"/>

        <TextView
            android:id="@+id/duration_mins"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_type_spinner"
            android:layout_margin="@dimen/text_margin"
            android:padding="4dp"
            android:text="@{@string/duration_mins_format(workout.durationInMinutes)}"
            app:onClickListener="@{handler.durationMinsClicked}"/>

        <TextView
            android:id="@+id/label"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration_mins"
            android:layout_margin="@dimen/text_margin"
            android:padding="4dp"
            android:text="@{workout.label}"
            android:hint="@string/label_hint"
            app:onClickListener="@{handler.labelClicked}"
            />

        <TextView
            android:id="@+id/calories"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_margin="@dimen/text_margin"
            android:padding="4dp"
            android:hint="@string/calories_hint"
            android:text='@{workout.calories != 0 ? @string/calories_format(workout.calories) : ""}'
            app:onClickListener="@{handler.caloriesClicked}"/>

        <Button
            android:id="@+id/insert_session_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calories"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/insert_session_button"
            app:onClickListener="@{handler.doneItButtonClicked}"/>
    </RelativeLayout>
</layout>