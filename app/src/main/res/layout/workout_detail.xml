<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_detail"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <Spinner
        android:id="@+id/activity_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/duration_mins"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_type_spinner"
        android:padding="4dp"
        android:inputType="number"
        tools:context="com.lambdasoup.quickfit.WorkoutDetailFragment" />
    <TextView
        android:id="@+id/duration_mins_label"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/duration_mins"
        android:layout_alignBaseline="@id/duration_mins"
        android:labelFor="@id/duration_mins"
        android:padding="16dp"
        android:text="@string/duration_mins_label"
        tools:context="com.lambdasoup.quickfit.WorkoutDetailFragment" />
</RelativeLayout>

